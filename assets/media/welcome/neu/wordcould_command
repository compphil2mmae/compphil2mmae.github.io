wordcloud_cli --background transparent --text wordcloud_input.txt --fontfile /usr/share/fonts/truetype/Fira_Sans/FiraSans-Regular.ttf --imagefile wordcloud.png --width 570 --height 465 --color seagreen --regexp "[ \w\.\-]+" --no_collocations

# transparent
wordcloud_cli --background None --mode RGBA --text wordcloud_input.txt --fontfile /usr/share/fonts/truetype/Fira_Sans/FiraSans-Regular.ttf --imagefile wordcloud-1t.png --width 570 --height 465 --color {seagreen | cornflowerblue}  --regexp "[ \w\.\-]+" --no_collocations